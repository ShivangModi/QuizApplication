<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_green"
    >

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:background="@mipmap/i_login_avtar_foreground"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></LinearLayout>

    <EditText
        android:id="@+id/email_l"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:ems="10"
        android:hint="Email"
        android:paddingLeft="15dp"
        android:inputType="textEmailAddress"
        android:background="@drawable/custom_text_view1"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
        app:layout_constraintStart_toStartOf="@+id/linearLayout2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <EditText
        android:id="@+id/password_l"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Password"
        android:paddingLeft="15dp"
        android:inputType="textPassword"
        android:background="@drawable/custom_text_view1"
        app:layout_constraintEnd_toEndOf="@+id/email_l"
        app:layout_constraintStart_toStartOf="@+id/email_l"
        app:layout_constraintTop_toBottomOf="@+id/email_l" />

    <Button
        android:id="@+id/login"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_marginTop="32dp"
        android:text="LOGIN"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:background="@drawable/login_btn1"
        app:layout_constraintEnd_toEndOf="@+id/password_l"
        app:layout_constraintStart_toStartOf="@+id/password_l"
        app:layout_constraintTop_toBottomOf="@+id/password_l" />

    <TextView
        android:id="@+id/tap_hear_to_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="not registered yet ? Register"
        app:layout_constraintEnd_toEndOf="@+id/login"
        app:layout_constraintStart_toStartOf="@+id/login"
        app:layout_constraintTop_toBottomOf="@+id/login" />

    <ProgressBar
        android:id="@+id/progressBarOfLogin"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/tap_hear_to_register"
        app:layout_constraintStart_toStartOf="@+id/tap_hear_to_register"
        app:layout_constraintTop_toBottomOf="@+id/tap_hear_to_register" />


</androidx.constraintlayout.widget.ConstraintLayout>