<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2ECC71"
    >


    <TextView
        android:id="@+id/view_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="login"
        android:textColor="#e67e22"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="72dp" />

    <EditText
        android:id="@+id/Email"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/custom_text_view1"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="20dp"
        android:textColor="#E67E22"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/view_login"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/view_login"
        app:layout_constraintTop_toBottomOf="@+id/view_login" />

    <EditText
        android:id="@+id/Password"
        android:layout_width="300dp"
        android:layout_height="50sp"
        android:layout_marginTop="32dp"
        android:background="@drawable/custom_text_view1"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#E67E22"
        android:textSize="20sp"
        android:paddingLeft="20dp"
        app:layout_constraintEnd_toEndOf="@+id/Email"
        app:layout_constraintStart_toStartOf="@+id/Email"
        app:layout_constraintTop_toBottomOf="@+id/Email" />

    <Button
        android:id="@+id/login_done"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Login"
        android:textColor="#ffffff"
        android:textSize="22sp"
        android:background="@drawable/login_btn1"
        app:layout_constraintEnd_toEndOf="@+id/Password"
        app:layout_constraintStart_toStartOf="@+id/Password"
        app:layout_constraintTop_toBottomOf="@+id/Password" />

    <TextView
        android:id="@+id/register_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="don't have an account ? Tap hear"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/login_done"
        app:layout_constraintStart_toStartOf="@+id/login_done"
        app:layout_constraintTop_toBottomOf="@+id/login_done" />
</androidx.constraintlayout.widget.ConstraintLayout>