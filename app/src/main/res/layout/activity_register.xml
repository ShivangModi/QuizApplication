<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2ECC71"
    >


    <EditText
        android:id="@+id/username"
        android:layout_width="300dp"
        android:layout_height="50sp"
        android:layout_marginTop="112dp"
        android:background="@drawable/custom_text_view1"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/phoneNumber"
        android:layout_width="300dp"
        android:layout_height="50sp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="phone"
        android:hint="Mobile Number"
        android:paddingLeft="20dp"
        android:textSize="20sp"
        android:background="@drawable/custom_text_view1"
        app:layout_constraintEnd_toEndOf="@+id/username"
        app:layout_constraintStart_toStartOf="@+id/username"
        app:layout_constraintTop_toBottomOf="@+id/username" />

    <EditText
        android:id="@+id/email"
        android:layout_width="300dp"
        android:layout_height="50sp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="Email"
        android:paddingLeft="20dp"
        android:textSize="20sp"
        android:background="@drawable/custom_text_view1"
        app:layout_constraintEnd_toEndOf="@+id/phoneNumber"
        app:layout_constraintStart_toStartOf="@+id/phoneNumber"
        app:layout_constraintTop_toBottomOf="@+id/phoneNumber" />

    <EditText
        android:id="@+id/password"
        android:layout_width="300dp"
        android:layout_height="50sp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Password"
        android:paddingLeft="20dp"
        android:textSize="20sp"
        android:background="@drawable/custom_text_view1"
        app:layout_constraintEnd_toEndOf="@+id/email"
        app:layout_constraintStart_toStartOf="@+id/email"
        app:layout_constraintTop_toBottomOf="@+id/email" />

    <Button
        android:id="@+id/registration_done"
        android:layout_width="300dp"
        android:layout_height="50sp"
        android:layout_marginTop="32dp"
        android:text="Register"
        android:background="@drawable/login_btn1"
        android:textColor="#ffffff"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="@+id/password"
        app:layout_constraintStart_toStartOf="@+id/password"
        app:layout_constraintTop_toBottomOf="@+id/password" />

    <TextView
        android:id="@+id/alrady_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="alrady have an account ?"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/registration_done"
        app:layout_constraintStart_toStartOf="@+id/registration_done"
        app:layout_constraintTop_toBottomOf="@+id/registration_done" />
</androidx.constraintlayout.widget.ConstraintLayout>